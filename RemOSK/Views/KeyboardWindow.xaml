<local:DraggableWindow x:Class="RemOSK.Views.KeyboardWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RemOSK.Views"
        mc:Ignorable="d"
        Title="RemOSK Keyboard" 
        Height="450" Width="800"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        ShowInTaskbar="False"
        Topmost="True"
        ResizeMode="NoResize"
        ShowActivated="False">
    <Grid>
        <!-- Background: #99111111 (~60% Opacity), Border: #88FFFFFF (Visible White Stroke), Thickness: 2px -->
        <!-- IsManipulationEnabled=False by default - only enabled in Edit Mode for drag/scale -->
        <Border x:Name="MainBorder" Background="#99111111" BorderBrush="#88FFFFFF" BorderThickness="2" CornerRadius="10" Margin="10" HorizontalAlignment="Left" VerticalAlignment="Top"> 
            <Border.LayoutTransform>
                <ScaleTransform x:Name="WindowScaleTransform" ScaleX="1.0" ScaleY="1.0"/>
            </Border.LayoutTransform>
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- Preview Area -->
                <!-- Preview Area -->
                <Border x:Name="PreviewBorder" Grid.Row="0" Margin="2" Padding="8" 
                        Background="#FF111111" Visibility="Visible" Height="120">
                     <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
                         <TextBlock x:Name="PreviewText" 
                                    Text="Waiting for text focus..."
                                    Foreground="#CCCCCC"
                                    FontSize="14"
                                    FontFamily="Consolas"
                                    TextWrapping="Wrap"
                                    TextAlignment="Left"
                                    VerticalAlignment="Top"
                                    HorizontalAlignment="Stretch"/>
                     </ScrollViewer>
                </Border>
                <Rectangle x:Name="PreviewSeparator" Grid.Row="0" VerticalAlignment="Bottom" Height="1" Fill="#33FFFFFF" Visibility="Visible"/>

                <Canvas x:Name="KeysCanvas" Grid.Row="1"/>
                <!-- Exit Edit Mode Button removed - use tray icon to exit edit mode -->
            </Grid>
        </Border>
    </Grid>

</local:DraggableWindow>
