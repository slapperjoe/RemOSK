<Window x:Class="RemOSK.Views.TextPreviewWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="TextPreviewWindow" Height="100" Width="400"
        WindowStyle="None"
        ResizeMode="NoResize"
        AllowsTransparency="True"
        Background="#CC000000"
        ShowInTaskbar="False"
        Topmost="True"
        IsHitTestVisible="False">
    
    <Border CornerRadius="8" BorderBrush="#33FFFFFF" BorderThickness="1">
        <Grid Margin="10">
            <TextBlock x:Name="PreviewText"
                       Text="Preview Text Context..."
                       Foreground="White"
                       FontSize="16"
                       FontFamily="Segoe UI"
                       TextAlignment="Left"
                       TextWrapping="Wrap"
                       VerticalAlignment="Center"/>
        </Grid>
    </Border>
</Window>
